{
  "name": "gosari",
  "version": "1.5.0",
  "repository": "https://github.com/wecanooo/gosari.git",
  "author": "wecanooo <wecanooo@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "cz": "git-cz",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "5.1.1",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-cli": "7.2.1",
    "release-it": "15.11.0"
  },
  "release-it": {
    "github": {
      "release": true,
      "requireBranch": "main"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
